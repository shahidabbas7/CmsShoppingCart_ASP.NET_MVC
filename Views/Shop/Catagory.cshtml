@model IEnumerable<CmsShoppingCart.Models.ViewModels.Shop.ProductVM>

@{
    ViewBag.Title = ViewBag.catname;
}

<h2>@ViewBag.catname</h2>
<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
           Price
        </th>
        <th>
           Description
        </th>
        
        <th>
           Image
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            <a href="/shop/products_detials/@item.Slug">
                <img src="/Images/Uploads/Products/@item.id/Thumbs/@item.ImageName" />
            </a>
        </td>
        <td>
            @Html.ActionLink("Details", "products_detials", new { id=item.id }) |
            
        </td>
    </tr>
}

</table>
